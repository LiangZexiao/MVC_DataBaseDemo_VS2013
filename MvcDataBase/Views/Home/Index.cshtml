@{
    ViewBag.Title = "Index";
}
@model IEnumerable<MvcDataBase.Models.Table3>
<h2>Index</h2>
<a href="/Home/Add">添加记录</a>
<form id="AddRecord" action="/Home/Add" method="post">
    列1:<input id="column1" name="column1" type="text" />
    列2:<input id="column2" name="column2" type="text" />
    <input type="submit" value="提交" />

</form>
<table border="1">
    @{
        foreach (var item in ViewBag.list)
        {
            <tr>
                <td>
                    ID:@item.id
                </td>
                <td>
                    列1：@item.column1
                </td>
                <td>
                    列2：@item.column2
                </td>
                <td>
                    @Html.ActionLink("删除此条记录", "Delete", new {id=@item.id })
                </td>
                <td>
                    <a href="/Home/Update?id=@item.id">修改此条记录</a>
                </td>
            </tr>
        }
    }
</table>
